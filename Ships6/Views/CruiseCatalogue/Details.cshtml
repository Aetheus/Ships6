@model Ships6.Models.Cruise

@{
    ViewBag.Title = "Details";
}


<div>
    <h2>@Html.DisplayFor(model => model.CruiseName)</h2>
    <hr />

    <div id="imageWrapper" class="center-block" style="width:100%;max-height:40%;">
        @if (Model.CruiseImage != null)
        {
            <img class="center-block" src="data:image;base64,@System.Convert.ToBase64String(Model.CruiseImage)" style="height:400px;"/>
        }
        else
        {
            <img class="center-block" src="~/Content/assets/NOIMAGE.jpg" style="height:400px;" />
        }
    </div>



    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Operator.OperatorName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Operator.OperatorName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CruiseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CruiseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CruiseDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CruiseDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CruiseImage)
        </dt>

        <dd>
            @if (Model.CruiseImage != null)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.CruiseImage)" />
            }
            else
            {
                <img src="~/Content/assets/NOIMAGE.jpg" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CruisePrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CruisePrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CruiseDepartureTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CruiseDepartureTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CruiseDayLength)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CruiseDayLength)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
